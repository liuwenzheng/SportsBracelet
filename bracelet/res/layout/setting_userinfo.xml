<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_userinfo" >

    <EditText
        android:id="@+id/et_setting_userinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@null"
        android:hint="@string/setting_userinfo_name_hint"
        android:textColor="@color/black_000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_setting_userinfo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_setting_userinfo_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/setting_userinfo_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_setting_userinfo_icon"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_userinfo_sex"
                android:textColor="@color/black_000000"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rg_setting_userinfo_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_setting_userinfo_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/setting_userinfo_male"
                    android:tag="0" />

                <RadioButton
                    android:id="@+id/rb_setting_userinfo_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/setting_userinfo_female"
                    android:tag="1" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_userinfo_birthday"
                android:textColor="@color/black_000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_setting_userinfo_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_weight="1.0"
                android:background="@drawable/setting_userinfo_text_bg"
                android:gravity="center"
                android:text="1989-01-01"
                android:textColor="@color/blue_2ea6c9"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_userinfo_height"
                android:textColor="@color/black_000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_setting_userinfo_height"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/setting_userinfo_text_bg"
                android:gravity="center"
                android:inputType="number"
                android:text="175"
                android:textColor="@color/blue_2ea6c9"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/setting_userinfo_height_unit"
                android:textColor="@color/black_000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_userinfo_weight"
                android:textColor="@color/black_000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_setting_userinfo_weight"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/setting_userinfo_text_bg"
                android:gravity="center"
                android:inputType="number"
                android:text="75"
                android:textColor="@color/blue_2ea6c9"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/setting_userinfo_weight_unit"
                android:textColor="@color/black_000000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/btn_setting_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_userinfo_next"
            android:gravity="center"
            android:text="@string/setting_next"
            android:textColor="@color/white_ffffff"
            android:textSize="18sp" />
    </FrameLayout>

</RelativeLayout>