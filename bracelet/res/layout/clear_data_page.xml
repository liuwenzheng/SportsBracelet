<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/grey_f4f4f4" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/clear_title"
            android:textColor="@color/grey_323232"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp" >

        <TextView
            android:id="@+id/tv_clear_bracelet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/clear_bracelet_icon"
            android:gravity="center_horizontal"
            android:text="@string/clear_bracelet"
            android:textColor="@color/grey_323232"
            android:textSize="18sp" />

        <View
            style="@style/divider_line_vertical"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp" />

        <TextView
            android:id="@+id/tv_clear_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/clear_phone_icon"
            android:gravity="center_horizontal"
            android:text="@string/clear_phone"
            android:textColor="@color/grey_323232"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>