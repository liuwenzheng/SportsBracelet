<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide_splash_bg">

    <FrameLayout
        android:id="@+id/frame_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/stroke_edit_bg"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/white_ffffff"
            android:textColorHint="@color/white_ffffff"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ll_username"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/stroke_edit_bg"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/white_ffffff"
            android:textColorHint="@color/white_ffffff"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ll_password"
        android:layout_below="@id/ll_password"
        android:layout_marginTop="12dp"
        android:text="忘记密码"
        android:textColor="@color/white_ffffff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_password"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/corners_btn_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white_ffffff"
        android:textSize="19sp" />
</RelativeLayout>