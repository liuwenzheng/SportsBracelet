<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:paddingBottom="13dp"
    android:paddingLeft="17dp"
    android:paddingRight="17dp"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/tv_alarm_item_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/grey_b6b6b6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_alarm_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_alarm_item_name"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/grey_3a3a3a"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_alarm_item_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/grey_3a3a3a"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_alarm_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:singleLine="true"
        android:layout_alignBottom="@id/tv_alarm_item_time"
        android:text=""
        android:textColor="@color/grey_3a3a3a"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cb_alarm_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_alarm_item_time"
        android:layout_alignParentRight="true"
        android:button="@drawable/checkbox_selector"
        android:checked="true" />

</RelativeLayout>