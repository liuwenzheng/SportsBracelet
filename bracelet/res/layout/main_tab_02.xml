<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_ffffff">

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <com.blestep.sportsbracelet.view.CircleProgressView
            android:id="@+id/circleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white_ffffff"
            CircleProgressView:barColor="@color/blue_97e5fb"
            CircleProgressView:barColor1="@color/blue_97e5fb"
            CircleProgressView:barColor2="@color/blue_97e5fb"
            CircleProgressView:barColor3="@color/blue_97e5fb"
            CircleProgressView:barWidth="10dp"
            CircleProgressView:contourSize="0dp"
            CircleProgressView:outerBarColor="#00000000"
            CircleProgressView:outerBarWidth="0dp"
            CircleProgressView:outerPadding="0dp"
            CircleProgressView:rimColor="@color/grey_f2f2f2"
            CircleProgressView:rimWidth="10dp"
            CircleProgressView:unitColor="@color/grey_f2f2f2" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_sleep"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">


        <TextView
            android:id="@+id/tv_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blue_2eb7dd"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_sleep"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sleep_icon" />

        <View
            style="@style/divider_line"
            android:layout_width="170dp"
            android:layout_below="@id/tv_sleep"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sleep"
        android:layout_marginTop="53dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_sober"
                android:textColor="@color/grey_545454"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/sleep_sober" />

            <TextView
                android:id="@+id/tv_sleep_sober_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/grey_545454"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_light"
                android:textColor="@color/grey_545454"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/sleep_light" />

            <TextView
                android:id="@+id/tv_sleep_light_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/grey_545454"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_deep"
                android:textColor="@color/grey_545454"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/sleep_deep" />

            <TextView
                android:id="@+id/tv_sleep_deep_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/grey_545454"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>