<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_c3e4ed" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/setting_bracelet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="@string/setting_bracelet"
        android:textColor="@color/black_000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/setting_bracelet_show" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_bracelet_tips"
            android:gravity="center"
            android:text="@string/setting_bracelet_tips"
            android:textColor="@color/black_000000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_setting_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="15dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:paddingTop="15dp"
        android:text="@string/setting_next"
        android:textColor="@color/black_000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_setting_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="15dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:paddingTop="15dp"
        android:text="@string/setting_pre"
        android:textColor="@color/black_000000"
        android:textSize="18sp" />

</RelativeLayout>