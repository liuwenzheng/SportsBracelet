<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="13dp"
    android:paddingLeft="17dp"
    android:paddingRight="17dp"
    android:paddingTop="13dp" >

    <TextView
        android:id="@+id/tv_alarm_edit_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/cb_alarm_edit_item_switch"
        android:text=""
        android:textColor="@color/grey_b6b6b6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_alarm_edit_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_alarm_edit_item_name"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/cb_alarm_edit_item_switch"
        android:text=""
        android:textColor="@color/grey_3a3a3a"
        android:textSize="18sp" />

    <CheckBox
        android:id="@id/cb_alarm_edit_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_alarm_edit_item_time"
        android:layout_alignTop="@id/tv_alarm_edit_item_name"
        android:button="@drawable/checkbox_select_selector"
        android:checked="false"
        android:focusable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_alarm_edit_item_time"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_alarm_edit_item_name"
        android:scaleType="fitCenter"
        android:src="@drawable/go" />

</RelativeLayout>