<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.jp.wheelview.WheelView
        android:id="@+id/wv_weight_kg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="@android:color/holo_blue_dark"
        app:lineHeight="1.5dp"
        app:maskHeight="48dp"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="14sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp" />


    <com.jp.wheelview.WheelView
        android:id="@+id/wv_weight_lb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="@android:color/holo_blue_dark"
        app:lineHeight="1.5dp"
        app:maskHeight="48dp"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="14sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp" />

    <com.jp.wheelview.WheelView
        android:id="@+id/wv_weight_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        app:itemNumber="3"
        app:lineColor="@android:color/holo_blue_dark"
        app:lineHeight="1.5dp"
        app:maskHeight="48dp"
        app:noEmpty="true"
        app:normalTextColor="#777"
        app:normalTextSize="14sp"
        app:selectedTextColor="#ff000000"
        app:selectedTextSize="22sp"
        app:unitHeight="50dp" />
</LinearLayout>

